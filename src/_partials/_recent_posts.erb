<%= render List.new do %>
  <% collections.posts.resources.take(4).each do |post| %>
    <%= render DataItem.new(href: post.relative_url) do |i| %>
      <% i.title do %>
        <%= render Heading.new(level: 3).with_content(post.data.title) %>
      <% end %>
      <% i.subtitle do %>
        <%= render Text.new(class: "text-sm font-normal text-gray-500 truncate") do %>
          <%= post.date.strftime("%Y/%m/%d") %> â€¢ <%= reading_time(post.content) %> min read
        <% end %>
      <% end %>
      <% i.description do %>
        <%= render Text.new(class: "line-clamp-2 text-sm text-gray-700 dark:text-gray-300").with_content(post.data.description) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
