---<%
{
  colors: "bg-zinc-50 text-zinc-900 dark:bg-zinc-900 dark:text-zinc-50"
}
%>---
<!DOCTYPE html>
<html lang="en" class="h-full" data-env="<%= Bridgetown.env %>">
  <%= render "head" %>
  <body class="h-full font-sans <%= layout.data.colors %> <%= class_map "debug-screens": Bridgetown.env.development? %>">
    <%= render "nav" %>
    <%= render Columns.new(classes: "min-h-full mt-16", spacing: "space-y-16") do %>
      <%#= render Alert.new(level: :info, classes: "-mb-8").with_content("Layout: #{resource.data&.layout&.to_s}") if Bridgetown.env.development? %>
      <%= render Columns.new(classes: "grow mt-16 px-4", as: :main) do %>
        <%= content %>
      <% end %>
      <%= render "footer" %>
    <% end %>
  </body>
</html>
