---<%
{ layout: :default }
%>---
<%= render Container.new(as: :article, classes: "space-y-8") do %>
  <%= render Link.new(href: "/").with_content(svg("/assets/logo.svg", class: "text-pink-500 dark:text-sky-400 w-24 mb-8")) if resource.data.render_logo %>
  <%= render Heading.new.with_content(resource.data.title) %>
  <%= render Divider.new(variant: :colorful) %>
  <%= render ContentBlock.new.with_content(content) %>
  <%= render Divider.new(variant: :colorful) %>
  <%= render Text.new(small: true) do %>
    <%= render Secondary.new.with_content("Last Updated: #{date_to_string(resource.data.last_modified_at, 'ordinal', 'US')}") %>
  <% end %>
<% end %>
