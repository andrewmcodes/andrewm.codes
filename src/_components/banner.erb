<div class="relative bg-skin-primary text-skin-inverted">
  <div class="px-3 py-3 mx-auto max-w-7xl sm:px-6 lg:px-8">
    <div class="pr-16 sm:text-center sm:px-16">
      <p class="">
        <%= message %>
        <span class="block sm:ml-2 sm:inline-block">
          <%= cta %>
        </span>
      </p>
    </div>
    <% if dismissable %>
      <div class="absolute inset-y-0 right-0 flex items-start pt-1 pr-1 sm:pt-2 sm:pr-2 sm:items-start">
        <button type="button" class="flex p-2 rounded-md focus:outline-none focus:ring-2">
          <span class="sr-only">Dismiss</span>
          <!-- Heroicon name: outline/x -->
          <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    <% end %>
  </div>
</div>
