<%= render Box.new(as: tag_name, **helper_opts) do %>
  <% if leading_icon || trailing_icon %>
    <% if leading_icon %>
      <%= leading_icon %>
    <% end %>
    <%= render Box.new(as: :span).with_content(children) if children %>
    <% if trailing_icon %>
      <%= trailing_icon %>
    <% end %>
  <% else %>
    <%= children %>
  <% end %>
<% end %>
