---
title: "Podcasts"
description: "Podcasts"
permalink: "/podcasts/"
no_index: false
---

<%= render Heading.new(level: 2).with_content("Currently Hosting") %>
<%= render List.new do %>
  <% site.collections.podcasts.resources.find_all { |e| e.data.status }.each do |podcast| %>
    <%= render ListTile.new(
        url: podcast.data.website_url,
        title: [podcast.data.title, podcast.data.status].join(" - "),
        description: podcast.data.description.to_s,
        image: podcast.data&.image_url,
        clamp: false
      ) %>
  <% end %>
<% end %>

<%= render Heading.new(level: 2).with_content("Guest Episodes") %>
<%= render List.new do %>
  <% site.collections.podcast_episodes.resources.find_all { |e| e.data.role == "guest" }.each do |episode| %>
    <%= render ListTile.new(
        url: episode.data.website_url,
        title: episode.data.title,
        description: episode.data.description.to_s,
        image: episode.relations.podcast&.data&.image_url,
        clamp: false
      ) %>
  <% end %>
<% end %>

<%= render Heading.new(level: 2).with_content("More Speaking") %>
