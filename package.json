{
  "private": true,
  "name": "@andrewmcodes/website",
  "version": "6.0.0",
  "scripts": {
    "esbuild": "node esbuild.config.js --minify",
    "esbuild-dev": "WATCH=true node esbuild.config.js --watch",
    "html:a11y": "npx pa11y-ci -c ./config/pa11y.json './output/**/*.html'",
    "html:lint": "yarn linthtml \"src/**/*.{html,erb,serb,liquid,md}\"",
    "package-json:fix": "npx prettier-package-json --write package.json",
    "storybook:build": "build-storybook",
    "storybook:start": "start-storybook -p 6006",
    "stylelint:fix": "stylelint \"frontend/styles/**/*.css\" --fix",
    "stylelint:lint": "stylelint \"frontend/styles/**/*.css\"",
    "svg:format": "svgo -f src/assets/icons --pretty",
    "svg:optimize": "svgo -f src/assets/icons",
    "prettier:fix": "yarn prettier \"**/*.{js,yml,md,mdx}\" -w",
    "prettier:lint": "yarn prettier \"**/*.{js,yml,md,mdx}\" -c",
    "webhint": "hint http://localhost:4000"
  },
  "resolutions": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "webpack": "^5"
  },
  "dependencies": {
    "@alpinejs/focus": "^3.10.5",
    "@alpinejs/ui": "^3.10.5-beta.7",
    "@hotwired/turbo": "^7.2.4",
    "alpine-turbo-drive-adapter": "^2.0.0",
    "alpinejs": "^3.10.5"
  },
  "devDependencies": {
    "@andrewmcodes/prettier-config": "^1.0.0",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@datadog/build-plugin": "^1.0.3",
    "@hint/configuration-web-recommended": "^8.2.16",
    "@linthtml/linthtml": "^0.9.3",
    "@storybook/addon-actions": "^6.5.13",
    "@storybook/addon-essentials": "^6.5.13",
    "@storybook/addon-interactions": "^6.5.13",
    "@storybook/addon-links": "^6.5.13",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack5": "^6.5.13",
    "@storybook/html": "^6.5.13",
    "@storybook/manager-webpack5": "^6.5.13",
    "@storybook/testing-library": "^0.0.13",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/typography": "^0.5.7",
    "@torchlight-api/torchlight-cli": "^0.1.7",
    "autoprefixer": "^10.4.12",
    "babel-loader": "^8.2.5",
    "cssnano": "^5.1.13",
    "esbuild": "^0.15.12",
    "focus-visible": "^5.2.0",
    "glob": "^8.0.3",
    "hint": "^7.1.3",
    "postcss": "^8.4.18",
    "postcss-focus-visible": "^7.1.0",
    "postcss-import": "^14.1.0",
    "postcss-load-config": "^4.0.1",
    "prettier": "^2.7.1",
    "radix-colors-for-tailwind": "^2.0.0",
    "stylelint": "^14.14.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-tailwindcss": "^0.0.6",
    "stylelint-prettier": "^2.0.0",
    "svgo": "^3.0.0",
    "tailwindcss": "^3.2.1",
    "tailwindcss-debug-screens": "^2.2.1",
    "vercel": "^28.4.12"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">0.25%",
      "not ie < 11"
    ]
  }
