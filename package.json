{
  "name": "andrewm-codes-website",
  "description": "Andrew Mason's Website",
  "homepage": "https://andrewm.codes",
  "version": "2.2.0",
  "author": {
    "name": "Andrew Mason",
    "url": "https://andrewm.codes"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/andrewmcodes/andrewm-codes-website.git"
  },
  "bugs": {
    "url": "https://github.com/andrewmcodes/www-andrewmcodes/issues"
  },
  "keywords": [
    "alpine.js",
    "bridgetown",
    "snowpack",
    "tailwind-css",
    "vercel"
  ],
  "dependencies": {
    "alpinejs": "^3.7.1"
  },
  "devDependencies": {
    "@andrewmcodes/prettier-config": "^1.0.0",
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@snowpack/plugin-postcss": "^1.4.3",
    "@snowpack/plugin-run-script": "^2.3.0",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.0",
    "@tailwindcss/typography": "^0.5.0",
    "autoprefixer": "^10.4.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "snowpack": "^3.8.8",
    "tailwindcss": "^3.0.15",
    "tailwindcss-debug-screens": "^2.2.1"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "NODE_ENV=development yarn watch:snowpack",
    "build": "BRIDGETOWN_ENV=production yarn build:bridgetown && BRIDGETOWN_ENV=production NODE_ENV=production yarn build:snowpack",
    "format": "yarn format:ruby && yarn format:prettier",
    "clean": "bundle exec bridgetown clean && rm -rf output",
    "update": "yarn update:cssdb && yarn update:deps",
    "build:bridgetown": "bundle exec bridgetown build",
    "build:snowpack": "snowpack build",
    "format:prettier": "prettier --write .",
    "format:ruby": "bundle exec standardrb",
    "update:cssdb": "npx browserslist@latest --update-db",
    "update:deps": "yarn upgrade-interactive --latest && yarn upgrade",
    "watch:bridgetown": "bundle exec bridgetown build --watch --quiet",
    "watch:snowpack": "snowpack dev"
  },
  "private": true,
  "license": "MIT",
  "browserslist": [
    "defaults"
  ],
  "lint-staged": {
    "*.{js,md,yml,json}": "yarn format:prettier",
    "*.rb": "yarn format:ruby"
  }
}
