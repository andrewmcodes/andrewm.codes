{
  "name": "andrewm-codes-website",
  "description": "Andrew Mason's Website",
  "homepage": "https://andrewm.codes",
  "version": "2.2.0",
  "author": {
    "name": "Andrew Mason",
    "url": "https://andrewm.codes"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/andrewmcodes/andrewm-codes-website.git"
  },
  "bugs": {
    "url": "https://github.com/andrewmcodes/www-andrewmcodes/issues"
  },
  "keywords": [
    "alpine.js",
    "bridgetown",
    "snowpack",
    "tailwind-css",
    "vercel"
  ],
  "dependencies": {
    "alpinejs": "^3.7.1"
  },
  "devDependencies": {
    "@andrewmcodes/prettier-config": "^1.0.0",
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@tailwindcss/typography": "^0.5.0",
    "autoprefixer": "^10.4.2",
    "esbuild": "^0.14.11",
    "esbuild-plugin-copy": "^0.4.0",
    "glob": "^7.2.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.2.0",
    "postcss": "^8.4.5",
    "postcss-import": "^14.0.2",
    "postcss-load-config": "^3.1.1",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.15",
    "tailwindcss-debug-screens": "^2.2.1"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "bin/bridgetown start",
    "build": "BRIDGETOWN_ENV=production bin/bridgetown deploy",
    "format": "yarn format:ruby && yarn format:prettier",
    "clean": "bin/bridgetown clean",
    "update": "yarn update:cssdb && yarn update:deps",
    "format:prettier": "prettier --write .",
    "format:ruby": "bundle exec standardrb",
    "update:cssdb": "npx browserslist@latest --update-db",
    "update:deps": "yarn upgrade-interactive --latest && yarn upgrade",
    "esbuild": "node esbuild.config.js --minify",
    "esbuild-dev": "node esbuild.config.js --watch"
  },
  "private": true,
  "license": "MIT",
  "browserslist": [
    "defaults"
  ],
  "lint-staged": {
    "*.{js,md,yml,json}": "yarn format:prettier",
    "*.rb": "yarn format:ruby"
  }
}
