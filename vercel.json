{
  "cleanUrls": true,
  "trailingSlash": true,
  "redirects": [
    {
      "source": "/now/",
      "destination": "/about/#now"
    },
    {
      "source": "/contact/",
      "destination": "/accounts/"
    },
    {
      "source": "/twitter/",
      "destination": "https://twitter.com/andrewmcodes"
    },
    {
      "source": "/github/",
      "destination": "https://github.com/andrewmcodes"
    },
    {
      "source": "/source/",
      "destination": "https://github.com/andrewmcodes/andrewm-codes-website"
    },
    {
      "source": "/r/setapp/",
      "destination": "https://go.setapp.com/invite/3sztpuuq"
    },
    {
      "source": "/resume/",
      "destination": "/resume-20211221.pdf"
    },
    {
      "source": "/ama/",
      "destination": "https://github.com/andrewmcodes/andrewm-codes-website/discussions/categories/ama"
    },
    {
      "source": "/404/",
      "destination": "/404.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(self), microphone=()"
        }
      ]
    },
    {
      "source": "/feed.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/rss+xml"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    },
    {
      "source": "/fonts/iAWriterQuattroS-Regular.woff2",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/fonts/iAWriterQuattroS-Italic.woff2",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/fonts/iAWriterQuattroS-BoldItalic.woff2",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/fonts/iAWriterQuattroS-Bold.woff2",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
